// 1 - Encontre o nome da primeira pessoa autora do livro nascida no ano de 1947. Dica: use a funÃ§Ã£o find.

function authorBornIn1947(bdYear) {
    return books.find((book) => book.author.birthYear === bdYear).author.name;
  }

console.log(authorBornIn1947(1947));

// 2 - Retorne o nome do livro de menor nome. Dica: use a funÃ§Ã£o forEach.

function smallerName() {
    let nameBook;
    
    books.forEach((book) => {
        if (!nameBook || book.name.length < nameBook.length) {
            nameBook = book.name;
        }
    });
 
    return nameBook;
  }

  console.log('O livro com o nome mais curto Ã©: ' + smallerName());

// 3 - Encontre o primeiro livro cujo nome possui 26 caracteres.

function getNamedBook() {
    return books.find((book) => book.name.length === 26);
}

console.log(getNamedBook());

// 4 - Ordene os livros por data de lanÃ§amento em ordem decrescente.

function booksOrderedByReleaseYearDesc() {
    return books.sort((a, b) => b.releaseYear - a.releaseYear);
}

console.log(booksOrderedByReleaseYearDesc());

// ðŸš€ 5 - FaÃ§a uma funÃ§Ã£o que retorne true, se todas as pessoas autoras nasceram no sÃ©culo XX, ou false, caso contrÃ¡rio.

function everyoneWasBornOnSecXX() {
  return books.every((book) => (
      book.author.birthYear > 1900 && book.author.birthYear <= 2000
  ));
}

console.log('Todos os autores nasceram no sÃ©culo XX? ' + everyoneWasBornOnSecXX());

// ðŸš€ 6 - FaÃ§a uma funÃ§Ã£o que retorne true, se algum livro foi lanÃ§ado na dÃ©cada de 80, e false, caso contrÃ¡rio.

function someBookWasReleaseOnThe80s() {
  return books.some((book) => (
      book.releaseYear >= 1980 && book.releaseYear <= 1990
  ));
}

console.log('Algum livro foi lanÃ§ado na dÃ©cada de 1980? ' + someBookWasReleaseOnThe80s());

// 7 - FaÃ§a uma funÃ§Ã£o que retorne true, caso nenhum author tenha nascido no mesmo ano, e false, caso contrÃ¡rio.

function authorUnique() {
  return books.every((book) =>
    !books.some((bookSome) =>
      (bookSome.author.birthYear === book.author.birthYear)
      && (bookSome.author.name !== book.author.name)));
}

console.log('Algum autor nasceu no mesmo ano que o outro? ' + authorUnique());